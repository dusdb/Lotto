<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:background="@color/back_btn"
                android:scaleType="centerInside"/>
            <!-- 제목 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시뮬레이션"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5856D6"
                android:gravity="center"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <!-- 메인 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 당첨번호 타이틀 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="당첨번호"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- 당첨번호 컨테이너 -->
                <LinearLayout
                    android:id="@+id/winningNumbersContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <!-- 당첨번호들이 동적으로 추가될 컨테이너 -->
                </LinearLayout>

                <!-- 등수별 당첨 현황 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="1등"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/tvFirst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0회 당첨"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="2등"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/tvSecond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0회 당첨"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="3등"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/tvThird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1회 당첨"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="4등"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/tvFourth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1회 당첨"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="5등"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/tvFifth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0회 당첨"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- 번호 그리드 컨테이너 (고정 높이로 변경) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 번호 생성 그리드 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="번호 생성"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:id="@+id/numberGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/numberContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 번호들이 동적으로 추가될 컨테이너 -->
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 버튼 컨테이너 (하단 고정) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGenerate5"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="5회 뽑기"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_generate"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnGenerate10"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="10회 뽑기"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_generate"
                android:backgroundTint="#2196F3" />
        </LinearLayout>

        <!-- 번호 재생성 버튼 (하단 고정) -->
        <Button
            android:id="@+id/btnRandomGenerate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="번호 재생성"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_generate" />
    </LinearLayout>

</LinearLayout>