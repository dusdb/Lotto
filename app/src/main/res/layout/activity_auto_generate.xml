<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AutoGenerate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:background="@color/back_btn"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자동 번호 생성"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#007AFF"
                android:gravity="center"/>

            <!--오른쪽 여백을 위한 투명한 뷰-->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>


        <!-- Description -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무작위로 번호를 생성합니다."
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="100dp" />

        <!-- 중앙 공간을 차지할 레이아웃 -->


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생성된 번호"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/firstBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_yellow"
                        android:text="6"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/secondBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_yellow"
                        android:text="5"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/thirdBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_blue"
                        android:text="16"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/fourthBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_red"
                        android:text="26"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/fifthBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_gray"
                        android:text="31"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/sixthBall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lotto_ball_green"
                        android:text="42"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="번호 생성"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_generate"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>